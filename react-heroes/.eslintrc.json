{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"curly": ["error", "all"],
		"object-curly-spacing": ["error", "always"],
		"semi": ["error", "always"],
		"react/prop-types": "off"
	}
}
